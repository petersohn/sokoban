#!/bin/bash

input="$1"
output="$2"

shift 2

rm -f "$output"

while read file; do
    if [ -z "$file" ]; then
        continue
    fi

    echo
    echo "$file"
    echo "$file" >>$"$output"
    echo "----------------------------------" >>"$output"
    ./sokoban "$@" "$file" 2>&1 | tee >(egrep '^(Expanded nodes:|Length of solution:|Processor Time:|Status copied|calculateReachable called|Status pool size)' >>"$output")
    echo "----------------------------------" >>"$output"
    echo >>"$output"
done <"$input"

