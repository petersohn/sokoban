#!/bin/bash

print_usage() {
    echo "Runs tests for different configurations and create statistics."
    echo "Usage: $0 -h"
    echo "       $0 [options] -- --flag1 min1 max1 [--flag2 min2 max2 ...]"
    echo "Options:"
    echo "    -h        This help message."
    echo "    -d        Dry run. Print what would be called, but do not actually call it."
    echo "    -x        The process to execute (default=$process)."
    echo "    -n        The number of times each configuration is run (default=$numberOfRuns)."
    echo "    -l        The level to run the test on. Can be added multiple times."
    echo "    -L        A file containing a list of levels to use. Can be added multiple times."
    echo
}

printHeader() {
    echo -n "level;"
    while [ $# -gt 0 ]; do
        echo -n "$1;"
        shift 3
    done
    echo "expanded nodes;real time;processor time"
}

runTest() {
    for level in "${levels[@]}"; do
        local sum=(0 0 0)
        local i
        local j
        for ((i=0; i<numberOfRuns; ++i)); do
            local command=("$process" --output-format='%expanded-nodes% %total-real-time:ms% %total-processor-time:ms%' "$level" "$@")

            if [ -z "$dryRun" ]; then
                local result=($("${command[@]}"))

                for ((j=0; j < ${#sum[@]}; ++j)); do
                    ((sum[j] += result[j]))
                done
            else
                echo "${command[@]}"
            fi
        done

        if [ -z "$dryRun" ]; then
            echo -n "$level;"
            for arg in "$@"; do
                echo -n "${arg#*=};"
            done
            local value
            for value in "${sum[@]}"; do
                echo -n "$((value / ${#value[@]}));"
            done
            echo
        fi
    done
}

runWithParameter() {
    local accumulated="$1"
    shift

    if [ "$#" -eq 0 ]; then
        runTest $accumulated
        return
    fi

    local parameter="$1"
    shift

    local start=
    local end=
    local step=1

    params=(start end step)

    for param in "${params[@]}"; do
        if [[ $# == 0 || "$1" == -* ]]; then
            break
        fi
        eval $param='$1'
        shift
    done

    if [ -z "$start" ]; then
        runWithParameter "$accumulated $parameter" "$@"
    elif [ -z "$end" ]; then
        runWithParameter "$accumulated $parameter=$start" "$@"
    else
        local value
        for (( value=start; value <= end; value+=step )); do
            runWithParameter "$accumulated $parameter=$value" "$@"
        done
    fi
}

# -----------------------------------------------------------------------------

process=./bin/sokoban
numberOfRuns=1
levels=()
dryRun=
while getopts ":hdx:n:l:L:" Option; do
    case $Option in
    h)
        print_usage
        exit
        ;;
    d)
        dryRun=yes
        ;;
    n)
        numberOfRuns=$OPTARG
        ;;
    x)
        process=$OPTARG
        ;;
    l)
        levels+=($OPTARG)
        ;;
    L)
        file=$OPTARG
        dir=$(dirname $OPTARG)
        while read file; do
            levels+=("$dir/$file")
        done < <(grep '\S' "$file")
    esac
done

shift $(($OPTIND - 1))

# -----------------------------------------------------------------------------

if [ -z "$dryRun" ]; then
    printHeader "$@"
fi

runWithParameter "" "$@"

