
include_rules

include $(COMPILE_TUP)
INCLUDE_DIRS += -isystem$(TURTLE_DIR)/include

: foreach *.cpp |> !cxx |>

include $(LINK_TUP)
LIBS += -lboost_unit_test_framework

: ./*.o $(SOURCE_DIR)/*.o $(CHECKER_DIR)/*.o $(DECISION_TREE_DIR)/*.o \
		$(DUMPER_DIR)/*.o $(STATUS_DIR)/*.o $(CPP_UTIL_LIB) |> !linker |> unitTest

include $(TEST_TUP)

: unitTest |> !unitTest |>
